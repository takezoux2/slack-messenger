{
  "name": "slack-messenger",
  "version": "1.0.0",
  "description": "TypeScript console application for Slack messaging",
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=21.0.0"
  },
  "packageManager": "yarn@4.0.0",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/main.ts",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write src tests",
    "clean": "rimraf dist"
  },
  "keywords": [
    "typescript",
    "console",
    "slack",
    "messenger"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@slack/web-api": "^7.10.0",
    "commander": "^14.0.1"
  }
}
